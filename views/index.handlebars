<div class='jumbotron'>
  <h1 class='text-center'>Burger Maker!</h1>
  <div class='col-xs-5 col-xs-offset-3' id='burgerimg'></div>
</div>
<div class='container'>
  <div class='row'>
  <h2 class='col-xs-4'>Burgers that are uneaten!</h2>
  <h2 class='col-xs-4 col-xs-offset-3'>Burgers that are Eaten!</h2>
  </div>
<div class='row'>
  <div class='col-xs-3'>
    <ul>
      {{#each burger}}
        {{#unless this.devoured}}
          <li>
            {{this.burger_name}}

          <form action="/{{this.id}}?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{this.id}}">
            <button type="submit">Delete</button>
          </form>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class='col-xs-3 col-xs-offset-3'>
    <ul>
      {{#each burger}}
        {{#if this.devoured}}
          <li>
            {{this.burge_name}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>
<div class='row'>
  <div class='col-xs-12 text-center'>
    <h2>Add a Burger</h2>
  </div>
  <div class='col-xs-4 col-xs-offset-4 text-center'>
    <form class="create-update-form" action="/" method="POST">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="burger">
      </div>
      <button type="submit">Add Burger</button>
      </form>
  </div>
</div>
</div>